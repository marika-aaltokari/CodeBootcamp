@{
    ViewData["Title"] = "Home Page";
}

@section scripts
{
    <script src="~/js/Demosovellus.js"></script>
}


<div class="text-center mb-4">
    <h5 class="display-4">Welcome to the Bookshelf</h5>
    
</div>    
    
<div class="container">
    <div class="row">
        <div class="col-sm-2">
            Author Firstname(s):
        </div>
        <div class="col-sm-3">
            <input type="text" class="form-control mb-3" id="authorFirstNames" />
        </div>
    </div>

    <div class="row">
        <div class="col-sm-2">
            Author Surname:
        </div>
        <div class="col-sm-3">
            <input type="text" class="form-control mb-3" id="authorSurname" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            Title:
        </div>
        <div class="col-sm-3">
            <input type="text" class="form-control mb-3" id="Title" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            Favorite:
        </div>
        <div class="col-sm-3">
            <input type="checkbox" class="form-control mb-3" id="favorite" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            Luku 2:
        </div>
        <div class="col-sm-3">
            <input type="date" class="form-control mb-3" id="Date"/>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-3 offset-2">
            <button id="saving" class="btn btn-info">Save</button>
        </div>
    </div>

</div>
   




